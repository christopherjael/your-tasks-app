{{#each tasks}}
  <div class='bg-secondary text-white p-2 mb-4' data-id='{{this._id}}'>
    <h4>{{this.title}}</h4>
    <hr />
    <p>{{this.description}}</p>

    <button class='btn btn-primary me-2'>
      <i class='bi bi-pencil-fill'></i>
    </button>

    <button class='btn btn-danger'>
      <i class='bi bi-trash-fill'></i>
    </button>
  </div>

{{else}}

  <p class='text-white text-center'>you haven't tasks</p>

{{/each}}